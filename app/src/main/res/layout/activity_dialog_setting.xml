<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:id="@+id/layout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/settings_shape"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/exit_bt"
        android:background="@null"
        android:scaleType="fitXY"
        android:id="@+id/exit_bt"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center">


        <TableRow
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingTop="30dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp">

            <ImageButton
                android:id="@+id/bt_sound"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/music_bt"
                android:scaleType="centerInside"
                android:background="@null"
                />



            <ImageButton
                android:id="@+id/bt_music"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/sound_bt"
                android:scaleType="centerInside"
                android:background="@null"/>


        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingBottom="30dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="15dp">

            <ImageButton
                android:id="@+id/bt_home"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/home_bt"
                android:layout_marginEnd="30dp"
                android:scaleType="centerInside"
                android:background="@null"/>

            <ImageButton
                android:id="@+id/bt_play"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerInside"
                android:src="@drawable/play_bt"
                android:background="@null"/>


        </TableRow>

    </TableLayout>

</RelativeLayout>